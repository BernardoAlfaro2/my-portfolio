---
const NAV_MENU = [
  { label: "Home", path: "#" },
  { label: "Skills", path: "#skills" },
  { label: "Education", path: "#education" },
];
---

<header
  class="w-full fixed m-auto top-0 z-10 py-5 flex justify-center items-center"
>
  <nav class="bg-gray-400 text-white text-balance rounded-xl w-200 py-1 px-4">
    <ul class="flex flex-row gap-6 text-[0.8rem]">
      {
        NAV_MENU.map((menu) => (
          <li class="cursor-pointer hover:scale-105 hover:opacity-90 transition-all">
            <a href={menu.path}>{menu.label}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
